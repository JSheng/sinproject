{//pm2服务器启动脚本
  "apps": [
    {
      "name": "iind", //项目名称
      "script": "./ssr.js",//启动文件
      "cwd": "./dist",//项目目录位置
      "env_production" : {
        "NODE_ENV": "production",  //使用production模式 pm2 start processes.json --env production
        "VUE_APP_SERVER_PORT": 4000
      },
      "watch": [ //监测目录
        "dist"
      ],
      "access": "./logs/access.log",
      "app-error": "./logs/app-err.log",
      "app-info": "./logs/app-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm Z"//日志时间格式
    }
  ]
}